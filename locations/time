if month = 4 and weatherDay ! daystart:
	weatherDay = daystart
	temper = rand(2, 20)
	osadki = rand(0, 10)

	if osadki < painweather:
		if hour >= 7 and hour <= 20:
			$osadki = 'Clear.'
		else
			$osadki = 'Clear.'
		end
	else
		$osadki = 'Rain.'
	end

	$weather = 'On the street the snow melts, the temperature is <<temper>> degrees Celsius. <<$osadki>>'
end

